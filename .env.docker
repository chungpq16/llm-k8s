# =============================================================================
# Chat with K8s - Environment Configuration for Docker
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file is used by docker-compose.yml
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Configuration - Choose ONE provider
# -----------------------------------------------------------------------------

# Option 1: Use LLM Farm (Enterprise)
USE_LLM_FARM=false
# LLM_FARM_BASE_URL=https://your-llm-farm-endpoint.com/v1
# LLM_FARM_API_KEY=your-llm-farm-api-key
# LLM_FARM_MODEL=gpt-4o

# Option 2: Use OpenAI (if USE_LLM_FARM=false)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# -----------------------------------------------------------------------------
# Tavily Search API (Required for web search functionality)
# -----------------------------------------------------------------------------
TAVILY_API_KEY=your-tavily-api-key-here

# -----------------------------------------------------------------------------
# Kubernetes Configuration
# -----------------------------------------------------------------------------
# Path to your kubeconfig file (default: ~/.kube/config)
# The docker-compose.yml will mount this file into the agent container
# KUBECONFIG_PATH=${HOME}/.kube/config

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info
# LOGFIRE_TOKEN=your-logfire-token-here

# -----------------------------------------------------------------------------
# Agent Backend URL (used by frontend)
# -----------------------------------------------------------------------------
# This should match the docker-compose service name and port
AGENT_URL=http://agent:8000/
